  <aura:attribute name="count" type="Decimal" access="Global" default="1" />
  <aura:handler name="init" value="{! this }" action="{! c.init }" />
  <aura:method name="click" action="{!c.click}" />

  <h1 id="banner">This is a test component</h1>
  <div id="count">{! v.count }</div>
</aura:component>	
